    public void updateMarks(String courseName, int marksPercent) {
        Registration[] finalList = new Registration[numberOfRegistrations];
        for(int i=0;i<numberOfRegistrations;i++){
            finalList[i]=registrationsListFive[i];
        }
        for(int i=0;i< finalList.length;i++){
            if(finalList[i].getTitle().equals(courseName)){
                finalList[i].setMarks(marksPercent);
            }
        }
    }
    public int marksOf(String courseName) {
        int a = 0;

        Registration[] finalList = new Registration[numberOfRegistrations];
        for(int i=0;i<numberOfRegistrations;i++){
            finalList[i]=registrationsListFive[i];
        }

        for (int i = 0; i < finalList.length; i++) {
            if ((finalList[i].getTitle()).equals(courseName)) {
                a = 1;
                return finalList[i].getMarks();
            }
        }
            return -1;
    }

    public Participant(String name) {
        studentName=name;

