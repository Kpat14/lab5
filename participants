    public void addRegistration(Registration course) {
        first = course;
        if(numberOfRegistrations>4){
            return;
        }
        registrationsListFive[numberOfRegistrations]=first;
        numberOfRegistrations++;


    }

    public void addRegistration(String courseName) {
      Registration a = new Registration(courseName);
      addRegistration(a);
    }



    public void clearRegistrations() {
        numberOfRegistrations=0;
        registrationsListFive[0] = null;
    }
